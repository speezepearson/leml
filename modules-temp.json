{
	"math": {
		"delimiter": "$",
		"create": {"script": "typeset-math"},
		"embed": {
			"txt": "(see image {input})",
			"html": "<img style='max-height:1.5ex' src='{input}' />"
		}
	},

	"code": {
		"delimiter": "`",
		"create": "<code>{input}</code>"
	},

	"comment": {
		"open": "{--",
		"close": "--}",
		"create": ""
	},

	"formatty": {
		"delimiter": "@",
		"create": "",
		"embed": {
			"txt": "(format: txt)",
			"html": "(format: html)",
			"md": "(format: md)",
			"tex": "(format: tex)"
		}
	}
}
